	function getTrainDetails() {
		
	@* alert("hi"); *@
    var from = document.getElementById("from").value;
    var to = document.getElementById("to").value;

    // Create a JSON object with the "from" and "to" values
    var data = {
        from: from,
        to: to
    };

    // Send the AJAX request to the server
    $.ajax({
        type: "POST", // Use POST or GET based on your controller method
        url: "/ControllerName/Available", // Replace "ControllerName" with your actual controller name
        data: data,
        dataType: "json",
        success: function (response) {
            // Update the view with the received train details
            if (response && response.length > 0) {
                var trainDetailsContainer = document.getElementById("trainDetailsContainer");
                trainDetailsContainer.innerHTML = ""; // Clear previous data

                // Loop through the received train details and display them
                for (var i = 0; i < response.length; i++) {
                    var train = response[i];
                    var trainInfo = document.createElement("div");
                    trainInfo.innerHTML = "Train Name: " + train.trainName + "<br>" +
                                         "Departure Time: " + train.time0 + "<br>" +
                                         "Arrival Time: " + train.time1 + "<br>" +
                                         "Price: " + train.price + "<br><br>";

                    trainDetailsContainer.appendChild(trainInfo);
                }
            } else {
                alert("No trains available for the selected route.");
            }
        },
        error: function () {
            alert("Error occurred while fetching train details.");
        }
    });
}

